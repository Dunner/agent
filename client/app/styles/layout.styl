.device
  border-radius 10%/5%
  overflow hidden
  border-color gray
  border-style solid
  color #272e38
.screenwrapper
  padding 12% 0
  height 100%
  &:before
    content ''
    display block
    position absolute
    top 0
    left 0
    height 12%
    width 100%
    background #fff5f5
  &:after
    content ''
    display block
    position absolute
    bottom 0
    left 0
    height 8%
    width 100%
  & .screen
    width 100%
    height 100%
    padding 5% 4% 8% 4%
    background #000
    & .screencontent
      width 100%
      height 100%
      background #fff5f5
      & .side-top
        height 10%
        width 100%
        & .top-today
          height 100%
          width 100%
          background-color #dddddd
          & li
            text-align left
            vertical-align bottom
            &.thetime
              vertical-align middle
              background #ccc
              &:before, &:after
                content ''
                position absolute
              &:before
                left -15px
                bottom 0px
                border-top 80px solid #ccc
                border-left 15px solid transparent
              &:after
                right -15px
                top 0px
                border-top 80px solid transparent
                border-left 15px solid #ccc
          & .dateinfo-weekday
            font-size 22px
          & .dateinfo-month
            font-weight 600
            font-size 28px
          & .dateinfo-day
            font-size 32px
          &:after
            clear both
            content ''
            display block
      & .side-middle
        height 70%
        width 100%
        overflow hidden
      & .side-bottom
        height 15%
        width 100%
        & .left-info
          width 60%
          height 100%
          float left
        & .right-buttons
          width 40%
          display table
          table-layout fixed
          height 100%
          text-align center
          overflow hidden
          float left
          & > ul
            margin 0
            padding 0
            display table-row
            min-height 100%
            position relative
            & > li
              list-style none
              display table-cell
              // &:nth-child(2)
              &:hover
              & .icon
                position absolute
                top 50%
                left 50%
                transform translate(-50%, -50%)
                width 50%
                height 50%



& .task-percent
  display block
  content ''
  position absolute
  left 0px
  top 0px
  width 0%
  height 100%
  background rgba(100,212,249,0.9)


.listwrap
  width 100%
  padding 10px 10px 10px 0
  height 100%

.today
  width 100%
  margin 0 auto
  font-size 40px
  line-height 70px
  padding-left 10%
  height 10%
.task-leftoff
  height 100%
  width 40px
  font-size 36px
  display inherit
  vertical-align midd
.task-label
  height 100%
  width 100px
  font-size 36px
  display inherit
  vertical-align middle
  &:before
    content ''
    display block
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)
    width 80px
    height 80px
    border-radius 10px
    border 1px solid rgba(0,0,0,.15)
  & .day-circle
    position absolute
    width 100%
    height 100%
    left 0px
    top 0px
    &:before
      content ''
      display block
      position absolute
      top 0px
      left calc( 50% - 1px )
      height calc( ( 100% - 80px ) / 2 )
      width 1px
      border 1px solid rgba(0,0,0,.15)
    &:after
      content ''
      display block
      position absolute
      top calc( ( ( 100% - 80px ) / 2 ) + 80px )
      left calc( 50% - 1px )
      height calc( ( 100% - 80px ) / 2 )
      width 1px
      border 1px solid rgba(0,0,0,.15)

.tasks
  padding 15px
  height calc( (100% / 7) * 5 )
  overflow-y auto
  overflow-x hidden
  & .task
    min-height 24px
    text-align left
    overflow hidden
    &:hover .remove
      cursor pointer
      position absolute
      border-radius 100% 100%
      top 0px
      right 0px
      width 24px
      height 24px
      border 1px solid red
      &:after
        display block
        content 'X'
        line-height 22px
        text-align center
        position absolute
        left 0
        top 0
        width 95%
        color darkred
    & .remove:hover
      backround darkred
      color red
.addtask
  width 100px
  text-align center
  height 100%

