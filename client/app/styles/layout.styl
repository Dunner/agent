.wrapper
  width 100%
  height 100%
  box-shadow 0 0 50px black
  border-radius 10px
  overflow hidden
  & .side-top
    height 15%
    width 100%
    box-shadow inset 0px 3px 3px -3px #fff
    background-clip content-box
    background #f16767
    &:before
      content ''
      display block
      height 33.3333%
    & .top
      height 66.6666%
  & .side-middle
    height 70%
    width 100%
    box-shadow inset 0px 3px 3px -3px #fff
    background-clip content-box
    background #f8cb6e
    overflow hidden
  & .side-bottom
    height 15%
    width 100%
    box-shadow inset 0px 3px 3px -3px #fff
    background-clip content-box
    background #64d4f9
    & .left-info
      width 60%
      height 100%
      float left
    & .right-buttons
      width 40%
      display table
      table-layout fixed
      height 100%
      text-align center
      overflow hidden
      float left
      & > ul
        margin 0
        padding 0
        display table-row
        min-height 100%
        position relative
        & > li
          list-style none
          display table-cell
          background rgba(100,212,249,0.6)
          // &:nth-child(2)
          &:hover
            background rgba(100,212,249,0.9)
          & .icon
            position absolute
            top 50%
            left 50%
            transform translate(-50%, -50%)
            width 50%
            height 50%



& .task-percent
  display block
  content ''
  position absolute
  left 0px
  top 0px
  width 0%
  height 100%
  background rgba(100,212,249,0.9)


.listwrap
  width 100%
  padding 10px 10px 10px 0
  height 100%

.today
  width 100%
  margin 0 auto
  font-size 40px
  line-height 70px
  padding-left 10%
  height 10%
  color #fff
.task-leftoff
  height 100%
  width 40px
  font-size 36px
  display inherit
  vertical-align midd
.task-label
  height 100%
  width 100px
  font-size 36px
  display inherit
  vertical-align middle
  color #fff
  &:before
    content ''
    display block
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)
    transition color 0.3s ease-in-out, background 0.3s ease-in-out
    width 80px
    height 80px
    border-radius 10px
    border 1px solid rgba(0,0,0,.15)
  & .day-circle
    position absolute
    width 100%
    height 100%
    left 0px
    top 0px
    &:before
      content ''
      display block
      position absolute
      top 0px
      left calc( 50% - 1px )
      height calc( ( 100% - 80px ) / 2 )
      width 1px
      border 1px solid rgba(0,0,0,.15)
    &:after
      content ''
      display block
      position absolute
      top calc( ( ( 100% - 80px ) / 2 ) + 80px )
      left calc( 50% - 1px )
      height calc( ( 100% - 80px ) / 2 )
      width 1px
      border 1px solid rgba(0,0,0,.15)

.task
  text-align left
  padding 15px
  border-radius 4px
  overflow hidden
  &:hover .remove
    position absolute
    top 0px
    right 0px
    width 32px
    height 32px
    background red
.addtask
  width 100px
  text-align center
  color green
  height 100%

