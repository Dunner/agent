.wrapper
  position relative
  width 100%
  height 100%
  border-radius 10px
  &:after
    content ''
    display block
    clear both

.side-top, .side-middle, .side-bottom, .maincontent
  box-shadow 0 0 50px black

.side-top, .side-middle, .side-bottom
  border-bottom 1px solid rgba(0,0,0,.0)
  border-right 1px solid rgba(0,0,0,.0)
  background-clip content-box

.side-top, .side-bottom, .maincontent, .main-bottom
  & > .canvas
    box-shadow inset 0px 3px 3px -3px #fff

.sidepanel
  width 100%
  height 100%
  float left
  position relative
  & .side-top
    height 15%
    width 100%
    border-top-left-radius 10px
    border-top-right-radius 10px
    & .canvas
      border-top-left-radius 10px
      border-top-right-radius 10px
      background #f16767
      &:before
        content ''
        display block
        height 33.3333%
    & .top
      height 66.6666%
  & .side-middle
    height 70%
    width 100%
    & .canvas
      background #f8cb6e
    & .calendar
      height 100%
      overflow-x hidden
    & .month-select
      height calc( 100% / 7 )
      color #efefef
      background rgba(255,255,255,.1)
      & *
        user-select none
      &:hover
        color #fff
      & nav
        height 100%
      & .month-label
        height 100%
        text-align center
        font-size 36px
      & .month-previous
        position absolute
        left 0px
        top 33.3%
        width 50%
        height 33.3%
        z-index 2
      & .month-next
        position absolute
        right 0px
        top 33.3%
        width 50%
        height 33.3%
        z-index 2
    & .day-select
      overflow-x hidden
      height calc( ( 100% / 7 ) * 6 )
      color #efefef
      padding 15px
      overflow hidden
      & *
        user-select none
      & nav, ul
        height 100%
      & li
        text-align center
        padding 0 3px
        transition all 0.5s ease-in-out
        // display inline-block
        // width 25%
        // height 11.25%
        // background-clip content-box
        color #222
        background rgba(255,255,255,.3)

        position absolute
        top 0px
        left 0px
        width 50px
        height 50px


        overflow hidden
        &:active
          position absolute
          left 0px
          top 0px
          width 100%
          height 100%
        & .task-percent
          display block
          content ''
          position absolute
          left 0px
          top 0px
          width 0%
          height 100%
          background rgba(100,212,249,0.9)
  & .side-bottom
    height 15%
    width 100%
    border-bottom 0px !important
    border-bottom-left-radius 10px
    border-bottom-right-radius 10px
    & .canvas
      border-bottom-left-radius 10px
      border-bottom-right-radius 10px
      background #64d4f9

.canvas
  width 100%
  height 100%
  left 0
  top 0
  z-index 1
  position absolute

.maincontent
  width calc( 100% - 580px )
  height 100%
  float left
  border-radius 10px
  & > .canvas
    overflow hidden
    border-radius 10px
    background rgba(255,255,255,.3)
    &:before
        content ''
        display block
        height 5%
  & .hour
    height 54px
    width 100%
    transition height 0.3s ease-in-out
    &:hover
      height 112px
      & .task-label:before
        color black
        background rgba(255,255,255,.3)
  & .main-bottom
    position absolute
    bottom 0px
    height 15%
    width 100%
    left 0px
    background rgba(255,255,255,.3)
    border-bottom-left-radius 10px
    border-bottom-right-radius 10px
    overflow hidden
    z-index 3
    &:after
      content ''
      display block
      clear both
    & .left-info
      width 60%
      height 100%
      float left
    & .right-buttons
      width 40%
      display table
      table-layout fixed
      height 100%
      text-align center
      overflow hidden
      float left
      & > ul
        margin 0
        padding 0
        display table-row
        min-height 100%
        position relative
        & > li
          list-style none
          display table-cell
          background rgba(100,212,249,0.6)
          // &:nth-child(2)
          &:hover
            background rgba(100,212,249,0.9)
          & .icon
            position absolute
            top 50%
            left 50%
            transform translate(-50%, -50%)
            width 50%
            height 50%





.listwrap
  width 100%
  padding 10px 10px 10px 0
  height 100%

.today
  width 100%
  margin 0 auto
  font-size 40px
  line-height 70px
  padding-left 10%
  height 10%
  color #fff
.task-leftoff
  height 100%
  width 40px
  font-size 36px
  display inherit
  vertical-align midd
.task-label
  height 100%
  width 100px
  font-size 36px
  display inherit
  vertical-align middle
  color #fff
  &:before
    content ''
    display block
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)
    transition color 0.3s ease-in-out, background 0.3s ease-in-out
    width 80px
    height 80px
    border-radius 10px
    border 1px solid rgba(0,0,0,.15)
    z-index -1
  & .day-circle
    position absolute
    width 100%
    height 100%
    left 0px
    top 0px
    &:before
      content ''
      display block
      position absolute
      top 0px
      left calc( 50% - 1px )
      height calc( ( 100% - 80px ) / 2 )
      width 1px
      border 1px solid rgba(0,0,0,.15)
      z-index -1
    &:after
      content ''
      display block
      position absolute
      top calc( ( ( 100% - 80px ) / 2 ) + 80px )
      left calc( 50% - 1px )
      height calc( ( 100% - 80px ) / 2 )
      width 1px
      border 1px solid rgba(0,0,0,.15)
      z-index -1

.task
  text-align left
  padding 15px
  border-radius 4px
  overflow hidden
  &:hover .remove
    position absolute
    top 0px
    right 0px
    width 32px
    height 32px
    background red
.addtask
  width 100px
  text-align center
  color green
  height 100%

nav.inline
  width 100%
  display table
  table-layout fixed
  min-height 100%
  text-align center
  overflow hidden
  & > ul
    margin 0
    padding 0
    display table-row
    min-height 100%
    position relative
    & > li
      list-style none
      display table-cell