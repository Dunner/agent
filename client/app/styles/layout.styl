.wrapper
    position relative
    width 100%
    height 100%
    overflow auto
    &:after
        content ''
        display block
        clear both

.sidepanel
    width 20%
    height 100%
    float left
    background #222
    color #fefefe
    padding 5px
    position relative
    & a
        color #fefefe
    & li .button
        width 100%
    
.maincontent
    width 80%
    height 100%
    overflow-y auto
    float left
    
    background #ebe9eb

.listwrap
    width 100%
    padding 10px 10px 10px 0
    height 100%
    
.day
    width 100%
    text-align center
.today
    width 80%
    margin 0 auto
    font-size 40px
    line-height 70px
    color #888
.hour
    display inline-block
    width 80%
    text-align left
    margin-bottom 20px
    &:after
        display block
        content ''
        clear both
.task-label
    width 70px
    text-align center
    color #00f
    font-size 36px
.task
    text-align left
    border 1px solid #e0e0e0
    padding 15px
    border-radius 4px
.addtask
    width 100px
    text-align center
    color green
    
nav.calendar
  width 100%
  display table
  height auto
  table-layout fixed
  min-height 60px
  & > ul
    margin 0
    padding 0
    display table-row
    min-height 100%
    & > li
      list-style none1
      cursor pointer
      text-align center
      line-height 60px
      display table-cell
      &:first-child
        border-left none
      & > a
        display block
        text-decoration none
        color black
        line-height 50px
      &.active > a
        color #00f