
  & .month-select, .dayline-select
    height calc( 100% / 7 )!important
    color #efefef
    background rgba(255,255,255,.1)
    overflow-x hidden
    & > ul
      height 100%
    & *
      user-select none
    &:hover
      color #fff
    & nav
      height 100%
    & .month-label
      height 100%
      text-align center
      font-size 36px
    & .month-previous
      position absolute
      left 0px
      top 33.3%
      width 33.3%
      height 33.3%
      z-index 2
    & .month-next
      position absolute
      right 0px
      top 33.3%
      width 33.3%
      height 33.3%
      z-index 2

  & .daygrid-select
    overflow-x hidden
    height calc( (100% / 7) * 6)!important
    width 100%
    color #efefef
    // padding 15px
    overflow hidden
    & > ul
      width 100%
      height 100%
      & > li
        text-align center
        color #222
        background rgb(249, 217, 152)
        position absolute
        top 0px
        left 0px
        width 50px
        height 50px
        overflow hidden
        &.active
          border 1px solid green
        &.expand
          left 0px !important
          top 0px !important
          width 100% !important
          height calc( 100% / 6 ) !important
          transition all 0.5s ease-in-out !important
          z-index 1 !important
          border 0 !important
        & .task-percent
          display block
          content ''
          position absolute
          left 0px
          top 0px
          width 0%
          height 100%
          background rgba(100,212,249,0.9)
    & *
      user-select none
    & nav
      height 100%
& .hours
  height calc( (100% / 7) * 5 )
  width 100%
  overflow hidden
  overflow-y auto
  background #f8cb6e
  & .hour
    height 54px
    width 100%
    transition height 0.3s ease-in-out
    &:hover
      height 112px
      & .task-label:before
        color black
        background rgba(255,255,255,.3)