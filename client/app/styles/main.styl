
//
// Typographic
//
$lines = rgba(0,0,0,.1)

presets(minor-second)

html
  font-family 'Open Sans', sans-serif
  font-size 12px
  background-image linear-gradient(0deg,$lines 1pt,transparent 0px),linear-gradient(90deg,$lines 1pt,transparent 0px) //pt because px weird x-browsers
  background-size 120px, 120px
  @media (min-width 600px)
    font-size 14px
  @media (min-width 800px)
    font-size 16px
  @media (min-width 1000px)
    font-size 18px

t-headers('Open Sans')

.center
  text-align center

//
// Other
//

*
  margin 0
  padding 0
  box-sizing border-box
  position relative

body, html
  width 100%
  height 100%
  box-sizing border-box
  overflow hidden

/* apply a natural box layout model to all elements, but allowing components to change */
*, *:before, *:after
  box-sizing inherit
  -webkit-font-smoothing antialiased
  text-shadow rgba(0,0,0,.01) 0 0 1px

ul
  margin 0px

a
  text-decoration none
  color black
/* -----
Vertical align
------ */

.valign
  display table
  position absolute
  left 0px
  top 0px
  width 100%
  height 100%
  & > *
    display table-cell
  & > .middle
    vertical-align middle
  & > .bottom
    vertical-align bottom
/* -----
Arrows
------- */
svg
  position absolute
  height 100%
  width 100%
  left 0
  top 0

.arrow
  fill black
  &.arrow-left
    transform rotate(180deg)


/* -----
Columns
----- */

ul.double
  width 100%
  position relative
  margin-bottom 20px
  padding 0 20px
  & li
    width calc(50% - 10px)
    float left
    position relative
    margin-left 20px
    overflow hidden
    &:first-child
      margin-left 0px
  &:after
    content ''
    display block
    clear both

ul.tripple
  width 100%
  position relative
  margin-bottom 20px
  padding 0 20px
  & li
    width calc(33.333% - 20px)
    float left
    position relative
    margin-left 20px
    overflow hidden
    &:first-child
      width 33.333%
      margin-left 0px
  &:after
    content ''
    display block
    clear both

nav.inline
  width 100%
  display table
  table-layout fixed
  min-height 100%
  text-align center
  overflow hidden
  & > ul
    margin 0
    padding 0
    display table-row
    height 100%
    position relative
    & > li
      list-style none
      display table-cell

.row::after
  display block
  content ''
  clear both

.cursor
  cursor pointer

.separator-top
  border-top 1px solid rgba(0,0,0,.15)

.separator-bottom
  border-bottom 1px solid rgba(0,0,0,.15)

.separator-left
  border-left 1px solid rgba(0,0,0,.15)

.separator-right
  border-right 1px solid rgba(0,0,0,.15)
hr
  border 0
  height 1px
  background #ccc
  width 100%
  margin 15px 0

hr.prettyline
  background: radial-gradient(ellipse at center, rgba(0,0,0,0.1) 0%,rgba(0,0,0,0) 75%);
  border 0
  height 1px
  position relative
  margin-top 0.5em
  &::before
    background: radial-gradient(ellipse at center, rgba(0,0,0,0.1) 0%,rgba(0,0,0,0) 75%);
    top -0.5em
    height 1em
    content ''
    position absolute
    width 100%
  &::after
    background #fff
    content ''
    height 0.5em  /* half the height of before */
    top 1px       /* height of hr*/
    content ''
    position absolute
    width 100%

.editing
  outline none

.full
  width 100%
  height 100%